# App
PORT=4000
NODE_ENV=development

# MongoDB (for live/volatile data)
MONGO_URI=mongodb://127.0.0.1:27017/cricket_live

# MySQL (for persistent data)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DB=cricket_core
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password

# Socket.io CORS (comma separated origins)
SOCKET_CORS_ORIGINS=http://localhost:5173,http://localhost:3000
